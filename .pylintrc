[MASTER]
ignore=venv
jobs=1
load-plugins=pylint.extensions.docparams,pylint.extensions.mccabe

[MESSAGES CONTROL]
disable=C0114,C0115,C0116  ; disable missing module/class/function docstring warnings for now

[FORMAT]
max-line-length=100
indent-string='    '

[DESIGN]
max-args=6
max-attributes=10
max-branches=12
max-locals=15
max-returns=6
max-statements=50

[TYPECHECK]
ignored-modules=flask,pytest
